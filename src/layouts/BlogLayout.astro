---
import Layout from '@/layouts/Layout.astro'
---

<Layout title="Armando Dev. Blog">
  <main class="flex justify-center my-5 w-full">
    <article
      class="max-w-sm md:max-w-2xl lg:max-w-4xl xl:max-w-6xl w-full p-6 flex justify-center items-center">
      <div
        class="text-slate-400 text-lg max-w-prose w-full flex flex-col justify-center items-start gap-5">
        <slot />
      </div>
    </article>
  </main>
</Layout>

<style is:global>
  h1 {
    font-size: 1.8rem /* 60px */;
    line-height: 1;
    color: #f8fafc;
    font-weight: 700;
  }
  h2 {
    font-size: 1.3rem /* 30px */;
    line-height: 2.25rem /* 36px */;
    color: #94a3b8;
    font-weight: 600;
  }
  h3 {
    font-size: 1.15rem /* 20px */;
    line-height: 1.75rem /* 28px */;
    color: #94a3b8;
    font-weight: 600;
  }

  p:has(img) {
    max-width: 100%;
  }

  img {
    width: 100%;
    height: auto;
    border-radius: 10px;
  }

  p > a {
    font-weight: 500;
    color: #0ea5e9;
    transition: color 0.15s ease;
  }

  p > a:hover,
  p > a:active,
  p > a:focus {
    color: #0369a1;
    outline: #0369a1;
  }

  pre {
    max-width: 80ch;
  }

  blockquote {
    border-left: 2px solid gray;
    background: #3b0764;
    padding-left: 8px;
    font-style: italic;
  }
</style>
