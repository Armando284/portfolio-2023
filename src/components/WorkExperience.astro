---
import ArticleTitle from '@/components/shared/ArticleTitle.astro'
import { jobs } from '@/lib/jobs'
import { formatDate } from '@/utilities/formats'
---

<article
  id="work-experience"
  class="flex justify-center text-slate-700 pt-10 scroll-m-12">
  <div class="max-w-sm md:max-w-2xl lg:max-w-4xl xl:max-w-6xl w-full px-4">
    <ArticleTitle>Work Experience</ArticleTitle>
    <div class="flex justify-center items-center">
      <ol class="relative border-s border-gray-200 dark:border-gray-700 w-max">
        {
          jobs.map((job) => (
            <li
              class="mb-10 ms-6"
              transition:name={`work-experience ${job.id} box`}>
              <span class="absolute flex items-center justify-center w-6 h-6 bg-blue-100 rounded-full -start-3 ring-8 ring-transparent dark:ring-gray-900 dark:bg-blue-900">
                <svg
                  class="w-2.5 h-2.5 text-blue-800 dark:text-blue-300"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="currentColor"
                  viewBox="0 0 20 20">
                  <path d="M20 4a2 2 0 0 0-2-2h-2V1a1 1 0 0 0-2 0v1h-3V1a1 1 0 0 0-2 0v1H6V1a1 1 0 0 0-2 0v1H2a2 2 0 0 0-2 2v2h20V4ZM0 18a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V8H0v10Zm5-8h10a1 1 0 0 1 0 2H5a1 1 0 0 1 0-2Z" />
                </svg>
              </span>
              <time class="mb-1 text-sm font-normal leading-none text-slate-400">
                {`${formatDate(job.startAt)} - ${formatDate(job.finishAt)}`}
              </time>
              <h3
                class="text-lg font-semibold text-gray-900 dark:text-white"
                transition:name={`work-experience ${job.id} title`}>
                {job.title}
              </h3>
              <h5 class="flex items-center gap-2">
                {job.features.slice(0, 3).map((feature) => (
                  <span class="bg-yellow-300 px-2 italic rounded-md capitalize text-sm">
                    {feature}
                  </span>
                ))}
              </h5>
              <p class="mb-4 text-base font-normal text-slate-500 line-clamp-4">
                {job.description}
              </p>
              <a
                href={`/work-experience/${job.id}`}
                class="px-5 py-2 mt-5 bg-purple-600 hover:bg-purple-500 rounded-md text-slate-50 shadow-purple-900 shadow-md">
                Learn more
              </a>
            </li>
          ))
        }
      </ol>
    </div>
  </div>
</article>
