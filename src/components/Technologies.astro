---
import AngularIcon from './icons/AngularIcon.astro'
import AppStoreIcon from './icons/AppStoreIcon.astro'
import AstroIcon from './icons/AstroIcon.astro'
import BootstrapIcon from './icons/BootstrapIcon.astro'
import Css3Icon from './icons/Css3Icon.astro'
import FirebaseIcon from './icons/FirebaseIcon.astro'
import GitIcon from './icons/GitIcon.astro'
import GithubIcon from './icons/GithubIcon.astro'
import GolangIcon from './icons/GolangIcon.astro'
import GooglePlayIcon from './icons/GooglePlayIcon.astro'
import HtmlIcon from './icons/HtmlIcon.astro'
import JsIcon from './icons/JsIcon.astro'
import MongoDbIcon from './icons/MongoDbIcon.astro'
import NodeJsIcon from './icons/NodeJsIcon.astro'
import NpmIcon from './icons/NpmIcon.astro'
import SqlIcon from './icons/SqlIcon.astro'
import TailwindIcon from './icons/TailwindIcon.astro'
import TsIcon from './icons/TsIcon.astro'
import UnityIcon from './icons/UnityIcon.astro'
import VercelIcon from './icons/VercelIcon.astro'
---

<article
  id="technologies"
  class="flex justify-center text-slate-400">
  <div class="max-w-6xl w-full">
    <h2 class="text-slate-700 font-bold text-xl capitalize">
      Some technologies I use
    </h2>

    <div class="flex flex-col items-center space-y-4">
      <div class="flex justify-between w-full items-center space-x-4">
        <HtmlIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <Css3Icon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <JsIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <TsIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <GolangIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
      </div>
      <div class="flex justify-between w-full items-center space-x-4">
        <BootstrapIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <TailwindIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <AngularIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <AstroIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <UnityIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
      </div>
      <div class="flex justify-between w-full items-center space-x-4">
        <FirebaseIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <NodeJsIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <MongoDbIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <NpmIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <SqlIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <GitIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
      </div>
      <div class="flex justify-between w-full items-center space-x-4">
        <GithubIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <GooglePlayIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <AppStoreIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
        <VercelIcon
          classList="w-28 h-28 hover:text-purple-500 hover:animate-spin"
        />
      </div>
    </div>
  </div>
</article>
