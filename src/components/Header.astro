---
import BackgroundCircle from '@/components/shared/BackgroundCircle.astro'
import Experience from '@/components/shared/Experience.tsx'
import SocialButtonGroup from '@/components/shared/SocialButtonGroup.astro'

const nickName = 'armando dev.'
---

<article id="top">
  <header
    id="header"
    class="w-full magicpattern flex justify-center shadow-purple-300 shadow-md -z-10 snap-start">
    <BackgroundCircle />
    <BackgroundCircle
      bg="bg-yellow-500"
      top="top-48"
      left="left-64"
    />
    <div
      class="max-w-6xl w-full min-h-[calc(100dvh-56px)] grid grid-cols-2 gap-5 place-items-center">
      <div class="flex flex-col justify-center items-start">
        <h1
          class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl text-slate-700 font-bold mb-4 capitalize">
          {
            nickName.split('').map((ch, i) => (
              <span
                class:list={[
                  'transition-all drop-shadow-md hover:drop-shadow-xl',
                  {
                    'hover:text-purple-700': i === 0,
                    'hover:text-yellow-500': i !== 0,
                  },
                ]}>
                {ch}
              </span>
            ))
          }
        </h1>
        <div
          class="max-w-prose flex flex-col justify-center items-start mb-4 text-slate-700 bg-slate-50 rounded-md p-2 z-10">
          <p class="text-lg">Welcome to my website ðŸ‘‹.</p>
          <p>
            I am a FrontEnd Web Developer with
            <Experience client:load />. Feel free to contact me if you find
            something interesting here or have a nice idea that needs to be
            developed.
          </p>
        </div>
        <SocialButtonGroup classList="justify-start" />
      </div>
      <div class="w-full h-full flex justify-end items-center">
        <div
          class="w-full h-full flex justify-center items-center bg-blob -mr-2">
          <img
            class="w-96 h-96 rounded-full saturate-150"
            src="recortado.webp"
            alt=""
          />
        </div>
      </div>
    </div>
  </header>
</article>

