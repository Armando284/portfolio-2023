---
import SocialButton from './SocialButton.astro'
import LinkedinIcon from '../icons/LinkedinIcon.astro'
import FacebookIcon from '../icons/FacebookIcon.astro'
import GithubIcon from '../icons/GithubIcon.astro'
import InstagramIcon from '../icons/InstagramIcon.astro'
import MediumIcon from '../icons/MediumIcon.astro'
import TwitterIcon from '../icons/TwitterIcon.astro'
import ButtonGroup from './ButtonGroup.astro'

interface Props {
  style?: 'elevated' | 'flat'
  classList?: string
}

const { style = 'elevated', classList = '' } = Astro.props
---

<ButtonGroup classList={classList}>
  <SocialButton
    url="www.google.com"
    description=""
    style={style}>
    <LinkedinIcon slot="start" />
  </SocialButton>
  <SocialButton
    url="www.google.com"
    description=""
    style={style}>
    <GithubIcon slot="start" />
  </SocialButton>
  <SocialButton
    url="www.google.com"
    description=""
    style={style}>
    <TwitterIcon slot="start" />
  </SocialButton>
  <SocialButton
    url="www.google.com"
    description=""
    style={style}>
    <MediumIcon slot="start" />
  </SocialButton>
  <SocialButton
    url="www.google.com"
    description=""
    style={style}>
    <InstagramIcon slot="start" />
  </SocialButton>
  <SocialButton
    url="www.google.com"
    description=""
    style={style}>
    <FacebookIcon slot="start" />
  </SocialButton>
</ButtonGroup>
