---
import ExternalLink from './icons/ExternalLink.astro'

interface Props {
  url: string
}

const url = Astro.props.url ?? 'www.google.com'
---

<a
  class="flex items-center space-x-2 transition-all text-purple-500 hover:underline hover:text-purple-700"
  href={`https://${url}`}
  target="_blank">
  <slot />
  <span class="block w-4 h-4">
    <ExternalLink />
  </span>
</a>
