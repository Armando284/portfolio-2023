---
import SocialButton from '@/components/shared/SocialButton.astro'
import LinkedinIcon from '@/components/icons/LinkedinIcon.astro'
import FacebookIcon from '@/components/icons/FacebookIcon.astro'
import GithubIcon from '@/components/icons/GithubIcon.astro'
import InstagramIcon from '@/components/icons/InstagramIcon.astro'
import MediumIcon from '@/components/icons/MediumIcon.astro'
import TwitterIcon from '@/components/icons/TwitterIcon.astro'
import ButtonGroup from '@/components/shared/ButtonGroup.astro'

interface Props {
  style?: 'elevated' | 'flat'
  classList?: string
}

const { style = 'elevated', classList = '' } = Astro.props
---

<ButtonGroup classList={classList}>
  <SocialButton
    url="www.linkedin.com/in/armando-pe%C3%B1a-7622bb20a/"
    description="My Linkedin profile"
    style={style}>
    <LinkedinIcon slot="start" />
  </SocialButton>
  <SocialButton
    url="github.com/Armando284"
    description="My Github profile"
    style={style}>
    <GithubIcon slot="start" />
  </SocialButton>
  <SocialButton
    url="twitter.com/arman2p284"
    description="My Twitter profile"
    style={style}>
    <TwitterIcon slot="start" />
  </SocialButton>
  <SocialButton
    url="medium.com/@armanp"
    description="My Medium profile"
    style={style}>
    <MediumIcon slot="start" />
  </SocialButton>
  <SocialButton
    url="www.instagram.com/armandopenatamayo/"
    description="My Instagram profile"
    style={style}>
    <InstagramIcon slot="start" />
  </SocialButton>
  <SocialButton
    url="www.facebook.com/profile.php?id=100015128176624"
    description="My Facebook profile"
    style={style}>
    <FacebookIcon slot="start" />
  </SocialButton>
</ButtonGroup>
