---
import SocialButton from '@/components/shared/SocialButton.astro'
import LinkedinIcon from '@/components/icons/LinkedinIcon.astro'
import FacebookIcon from '@/components/icons/FacebookIcon.astro'
import GithubIcon from '@/components/icons/GithubIcon.astro'
import InstagramIcon from '@/components/icons/InstagramIcon.astro'
import MediumIcon from '@/components/icons/MediumIcon.astro'
import TwitterIcon from '@/components/icons/TwitterIcon.astro'
import ButtonGroup from '@/components/shared/ButtonGroup.astro'

interface Props {
  style?: 'elevated' | 'flat'
  classList?: string
}

const { style = 'elevated', classList = '' } = Astro.props
---

<ButtonGroup classList={classList}>
  <SocialButton
    url="www.google.com"
    description=""
    style={style}>
    <LinkedinIcon slot="start" />
  </SocialButton>
  <SocialButton
    url="www.google.com"
    description=""
    style={style}>
    <GithubIcon slot="start" />
  </SocialButton>
  <SocialButton
    url="www.google.com"
    description=""
    style={style}>
    <TwitterIcon slot="start" />
  </SocialButton>
  <SocialButton
    url="www.google.com"
    description=""
    style={style}>
    <MediumIcon slot="start" />
  </SocialButton>
  <SocialButton
    url="www.google.com"
    description=""
    style={style}>
    <InstagramIcon slot="start" />
  </SocialButton>
  <SocialButton
    url="www.google.com"
    description=""
    style={style}>
    <FacebookIcon slot="start" />
  </SocialButton>
</ButtonGroup>
