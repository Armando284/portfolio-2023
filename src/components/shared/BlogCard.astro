---
import type { Blog } from '@/models/types'

interface Props extends Blog {}

const {
  slug,
  title,
  imgUrl = 'test_image.webp',
  imgDescription,
  description,
} = Astro.props
---

<a
  href={`/blog/${slug}`}
  class="w-full max-h-36 p-2 text-slate-500 flex justify-start items-start gap-5 border border-spacing-5 border-slate-200 rounded-md transition-colors ease-linear duration-300 hover:bg-slate-100">
  <img
    class="object-contain w-64 h-32 rounded-md bg-slate-900"
    src={imgUrl}
    alt={imgDescription}
    loading="lazy"
  />
  <div>
    <h1 class="text-slate-700 font-bold text-2xl capitalize">
      {title}
    </h1>
    <p class="line-clamp-3">
      {description}
    </p>
  </div>
</a>
