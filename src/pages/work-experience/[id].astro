---
import LinkIcon from '@/components/icons/LinkIcon.astro'
import SocialButton from '@/components/shared/SocialButton.astro'
import TechTag from '@/components/shared/TechTag.astro'
import Layout from '@/layouts/Layout.astro'
import { jobs } from '@/lib/jobs'
import { formatDate } from '@/utilities/formats'

const { id } = Astro.params
const job = jobs.find((_job) => _job.id === id)

const divitionIdx = job?.description.indexOf('KEY ACCOMPLISHMENTS:') ?? 0
const responsabilities = job?.description.substring(0, divitionIdx)
const achievments = job?.description.substring(divitionIdx)
---

<Layout title="Armando Dev. | Work Experience">
  <main class="flex flex-col">
    <article
      id="about-me"
      class="min-h-screen flex justify-center items-center text-slate-400 snap-start"
      transition:name=`work-experience ${id} box`>
      <div
        class="max-w-sm md:max-w-2xl lg:max-w-4xl xl:max-w-6xl w-full flex justify-center items-center">
        <div
          class="max-w-prose w-full flex flex-col justify-center items-start gap-5">
          <h1
            class="text-2xl md:text-6xl text-slate-100 uppercase"
            transition:name=`work-experience ${id} title`>
            {job?.title}
          </h1>
          <img
            class="w-full max-w-prose h-full rounded-md bg-gradient-to-br from-purple-700/20 to-purple-700/40"
            src={`/${job?.imgUrl}`}
            alt={job?.imgDescription}
            transition:name=`work-experience ${id} img`
          />
          <i class="text-sm"
            >From {formatDate(job?.startAt)} to {formatDate(job?.finishAt)}.</i
          >
          <TechTag tags={job?.features} />
          <div class="flex justify-start items-center gap-2">
            {
              job?.links.map((link) => (
                <SocialButton
                  url={link.url}
                  description={link.description}
                  style="large">
                  <LinkIcon slot="start" />
                  {link.description}
                </SocialButton>
              ))
            }
          </div>
          <p>{responsabilities}</p>
          <p>{achievments}</p>
        </div>
      </div>
    </article>
  </main>
</Layout>
