---
import ArticleTitle from '@/components/shared/ArticleTitle.astro'
import BlogList from '@/components/shared/BlogList'
import Layout from '@/layouts/Layout.astro'
---

<Layout title="Armando Dev. | Blog">
  <main class="flex flex-col">
    <article
      id="blog"
      class="min-h-screen flex justify-center items-start text-slate-400 px-5 snap-start">
      <div class="max-w-sm md:max-w-2xl lg:max-w-4xl xl:max-w-6xl w-full px-4">
        <BlogList client:visible>
          <ArticleTitle>Blog</ArticleTitle>
        </BlogList>
      </div>
    </article>
  </main>
</Layout>
